<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="0dip" android:color="#877575" />
            <gradient android:angle="-90" android:startColor="#5e9eda" android:endColor="#4a91d0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="0dip" android:color="#4a91d0" />
            <solid android:color="#837c83"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="0dip" android:color="#4d4a5b" />
            <gradient android:angle="-90" android:startColor="#5e9eda" android:endColor="#4a91d0" />
        </shape>
    </item>
</selector>