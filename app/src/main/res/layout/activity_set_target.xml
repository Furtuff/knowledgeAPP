<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_target"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wildcodeschool.eateam.knowledgeishere.SetTargetActivity">

    <RelativeLayout
        android:id="@+id/dimension"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Dimension A"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/btnA"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:fontFamily="roboto"
            android:textSize="20sp"
            android:layout_height="28dp" />

        <Button
            android:text="Dimension B"
            android:layout_width="wrap_content"
            android:layout_below="@+id/btnA"
            android:layout_marginTop="40dp"
            android:layout_alignParentStart="true"
            android:id="@+id/btnB"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:fontFamily="roboto"
            android:layout_height="28dp"
            android:textSize="20sp" />

        <Button
            android:text="Dimension C"
            android:layout_width="wrap_content"
            android:id="@+id/btnC"
            android:layout_marginTop="40dp"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:layout_below="@+id/btnB"
            android:layout_alignParentStart="true"
            android:fontFamily="roboto"
            android:layout_height="28dp"
            android:textSize="20sp" />

        <Button
            android:text="Dimension D"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/btnD"
            android:layout_below="@+id/btnC"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:fontFamily="roboto"
            android:layout_height="28dp"
            android:textSize="20sp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/seekbar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dimension"
        >

        <SeekBar
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar1"
            android:layout_marginTop="5dp"
            android:max="10"
            android:progress="3"
            android:clickable="false"
             />

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:layout_marginTop="50dp"
            android:max="10"
            android:progress="5"
            android:layout_below="@+id/seekBar1"

            android:layout_width="150dp" />

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3"
            android:layout_marginTop="50dp"
            android:progress="4"
            android:max="10"
            android:layout_below="@+id/seekBar2"

            android:layout_width="150dp" />

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/seekBar4"
            android:layout_marginTop="50dp"
            android:max="10"
            android:progress="3"
            android:layout_below="@+id/seekBar3"

            android:layout_width="150dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/value"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/seekbar">

        <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView11"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/textView10"
            android:textSize="25sp" />

        <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView10"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/textView9"
            android:textSize="25sp" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView12"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/textView11"
            android:textSize="25sp" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/textView9"

            android:textSize="25sp" />

    </RelativeLayout>

</RelativeLayout>
