<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wildcodeschool.eateam.knowledgeishere.SetUpActivity">

    <Button
        android:text="> Next"
        android:background="@drawable/base_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="104dp"
        android:id="@+id/nextBTN2"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="2 Set a target and deadline for specific tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="3 Start your journey..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="68dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="1 Self assessment, tick off the boxes for the elements you have in place already."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true" />
</RelativeLayout>
