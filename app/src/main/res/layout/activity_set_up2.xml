<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#363333"
    tools:context="fr.wildcodeschool.eateam.knowledgeishere.SetUpActivity">


    <RelativeLayout
        android:id="@+id/txtV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp">

        <TextView
            android:text="  Self assessment, tick off the boxes for the elements you have in place already."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/txtV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV1"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp">


        <TextView
            android:text="  Set a target and deadline for specific tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/txtV3"
        android:layout_below="@+id/txtV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp">


        <TextView
            android:text=" Start your journey..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </RelativeLayout>


    <Button
        android:text="> Next"
        android:background="@drawable/base_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextBTN3"
        android:layout_marginTop="35dp"
        android:textColor="#FFF"
        android:layout_below="@+id/txtV3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <ImageView
        app:srcCompat="@drawable/checked"
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/txtV2"
        android:layout_alignParentStart="true" />

    <TextView

        android:id="@+id/txtView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="3."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/txtV3"
        android:layout_alignBottom="@+id/txtV3"
        android:layout_alignParentStart="true" />

    <TextView

        android:id="@+id/txtView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="2."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/txtV2"
        android:layout_alignBottom="@+id/txtV2"
        android:layout_alignParentStart="true" />


</RelativeLayout>
