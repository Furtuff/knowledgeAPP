<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="fr.wildcodeschool.eateam.knowledgeishere.SignActivity">

    <EditText
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="10sp"
        android:textColorHint="#91bcfc"
        android:gravity="center"
        android:background="@drawable/blue_circle"
        android:layout_marginBottom="10sp"
        android:id="@+id/logintext"
        android:hint="Your E Mail ID"
        android:layout_height="45sp"
        android:fontFamily="roboto" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:textColorHint="#91bcfc"
        android:layout_marginBottom="10sp"
        android:background="@drawable/blue_circle"
        android:id="@+id/passwordText"
        android:hint="Choose / Type Your Password"
        android:layout_height="45sp"
        android:fontFamily="roboto" />

    <Button
        android:text="F"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:id="@+id/buttonFaceBook"
        android:background="@drawable/boutonrect_facebook" />

    <Button
        android:text="G"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGoogle"
        android:layout_marginBottom="10sp"
        android:background="@drawable/boutonrect_google"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:text="Sign in "
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignIn"
        android:layout_marginBottom="10sp"
        android:background="@drawable/boutonrect_other"
        android:fontFamily="roboto"
        android:textAllCaps="false" />

    <Button
        android:text="Register"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister"
        android:layout_marginBottom="10sp"
        android:background="@drawable/boutonrect_other"
        android:textAllCaps="false" />

    <Button
        android:gravity="center"
        android:text="Skip  >"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@drawable/boutonrect_other"
        android:textAllCaps="false" />
</LinearLayout>
